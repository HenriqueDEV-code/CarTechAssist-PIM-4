@page
@model CarTechAssist.Web.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha - CarTechAssist";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/img/LOGO.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            overflow: hidden;
            background: #1a1a1a;
        }

        .reset-password-container {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        .visual-section {
            flex: 1;
            background: url('@Url.Content("~/img/imgPerfil.png")') center center / cover no-repeat fixed;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .visual-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.55)),
                radial-gradient(circle at 30% 50%, rgba(76, 175, 80, 0.12) 0%, transparent 55%),
                radial-gradient(circle at 70% 80%, rgba(76, 175, 80, 0.10) 0%, transparent 55%);
            z-index: 1;
        }

        .visual-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
        }

        .brand-wrap {
            display: inline-block;
            padding: 18px 26px;
            border-radius: 12px;
            background: rgba(0, 0, 0, 0.35);
            box-shadow: 0 10px 40px rgba(0,0,0,0.35);
            backdrop-filter: blur(2px);
        }

        .visual-content h1 {
            font-size: 3.75rem;
            font-weight: 800;
            margin: 0 0 10px 0;
            letter-spacing: 1px;
            line-height: 1.1;
            color: #ffffff;
        }

        .visual-content p {
            font-size: 1.05rem;
            color: #d0d0d0;
            font-weight: 400;
            letter-spacing: 0.4px;
        }

        .form-section {
            flex: 0 0 500px;
            background: #282c34;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px 50px;
            position: relative;
        }

        .form-header {
            margin-bottom: 50px;
        }

        .form-header h2 {
            font-size: 2.25rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 10px;
            letter-spacing: 0.2px;
        }

        .form-header p {
            color: #b0b0b0;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 30px;
            position: relative;
        }

        .form-label {
            display: flex;
            align-items: center;
            color: #c7c7c7;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 12px;
            letter-spacing: 0.25px;
        }

        .form-label i {
            margin-right: 8px;
            font-size: 1rem;
            color: #4CAF50;
        }

        .form-control {
            background: transparent;
            border: none;
            border-bottom: 1px solid #4a4a4a;
            border-radius: 0;
            color: #ffffff;
            font-size: 1rem;
            padding: 12px 0 10px 0;
            width: 100%;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-bottom-color: #4CAF50;
            box-shadow: none;
        }

        .codigo-input {
            font-size: 1.5rem;
            letter-spacing: 8px;
            text-align: center;
            font-weight: bold;
        }

        .form-control::placeholder {
            color: #6a6a6a;
            font-weight: 400;
        }

        .btn-submit {
            width: 100%;
            background: #4CAF50;
            border: none;
            border-radius: 8px;
            padding: 14px 16px;
            font-size: 1rem;
            font-weight: 700;
            color: #ffffff;
            cursor: pointer;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
            margin-top: 20px;
        }

        .btn-submit:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.4);
        }

        .login-link {
            text-align: center;
            margin-top: 30px;
        }

        .login-link a {
            color: #b0b0b0;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .login-link a:hover {
            color: #ffffff;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            border-radius: 8px;
            color: #ff6b6b;
            padding: 12px 16px;
            margin-bottom: 25px;
            font-size: 0.9rem;
        }

        .alert-success {
            background: rgba(76, 175, 80, 0.1);
            border: 1px solid rgba(76, 175, 80, 0.3);
            border-radius: 8px;
            color: #4CAF50;
            padding: 12px 16px;
            margin-bottom: 25px;
            font-size: 0.9rem;
        }

        .text-danger {
            color: #ff6b6b;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        @@media (max-width: 968px) {
            .reset-password-container {
                flex-direction: column;
            }

            .visual-section {
                flex: 0 0 40%;
            }

            .form-section {
                flex: 1;
                padding: 40px 30px;
            }
        }

        @@media (max-width: 576px) {
            .form-section {
                flex: 0 0 100%;
                padding: 30px 20px;
            }

            .visual-section {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <!-- Seção Visual - Esquerda -->
        <div class="visual-section">
            <div class="visual-content">
                <div class="brand-wrap">
                    <h1>CAR TECH ASSIST</h1>
                    <p>Sistema de Gerenciamento de Chamados</p>
                </div>
            </div>
        </div>

        <!-- Seção Formulário - Direita -->
        <div class="form-section">
            <div class="form-header">
                <h2>Redefinir Senha</h2>
                <p>Informe o código recebido por e-mail e sua nova senha</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert-success" role="alert">
                    @Model.SuccessMessage
                </div>
            }

            @if (!Model.SenhaRedefinida)
            {
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Codigo" class="form-label">
                            <i class="bi bi-key"></i>
                            Código de Recuperação
                        </label>
                        <input asp-for="Codigo" class="form-control codigo-input" placeholder="000000" maxlength="6" required autofocus 
                               oninput="this.value = this.value.replace(/\s/g, '')" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                        <small class="text-muted" style="font-size: 0.85rem; margin-top: 5px; display: block;">
                            Digite o código de 6 dígitos recebido por e-mail
                        </small>
                    </div>

                    <div class="form-group">
                        <label asp-for="NovaSenha" class="form-label">
                            <i class="bi bi-lock"></i>
                            Nova Senha
                        </label>
                        <input asp-for="NovaSenha" type="password" class="form-control" placeholder="Digite sua nova senha" required />
                        <span asp-validation-for="NovaSenha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmarSenha" class="form-label">
                            <i class="bi bi-lock-fill"></i>
                            Confirmar Nova Senha
                        </label>
                        <input asp-for="ConfirmarSenha" type="password" class="form-control" placeholder="Confirme sua nova senha" required />
                        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-submit">Redefinir Senha</button>

                    <div class="login-link">
                        <a href="/Login">Voltar para o login</a>
                    </div>
                </form>
            }
            else
            {
                <div class="login-link">
                    <a href="/Login" class="btn-submit" style="text-decoration: none; display: block;">Fazer Login</a>
                </div>
            }
        </div>
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

