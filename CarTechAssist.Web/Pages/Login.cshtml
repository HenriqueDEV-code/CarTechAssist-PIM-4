@page
@model CarTechAssist.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login - CarTechAssist";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/img/LOGO.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            overflow: hidden;
            background: #1a1a1a;
        }

        .login-container {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        /* Seção Visual - Esquerda */
        .visual-section {
            flex: 1;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Container do carrossel */
        .carousel-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        /* Slides do carrossel */
        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0;
            transition: opacity 3s ease-in-out;
            transform: scale(1.05);
        }

        .carousel-slide.active {
            opacity: 1;
            transform: scale(1);
        }

        /* Overlay escuro + halos verdes sutis */
        .visual-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.55)),
                radial-gradient(circle at 30% 50%, rgba(76, 175, 80, 0.12) 0%, transparent 55%),
                radial-gradient(circle at 70% 80%, rgba(76, 175, 80, 0.10) 0%, transparent 55%);
            z-index: 1;
        }

        .visual-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
        }

        /* Branding (título + subtítulo) */
        .brand-wrap {
            display: inline-block;
            padding: 18px 26px;
            border-radius: 12px;
            background: rgba(0, 0, 0, 0.35);
            box-shadow: 0 10px 40px rgba(0,0,0,0.35);
            backdrop-filter: blur(2px);
        }

        .visual-content h1 {
            font-size: 3.75rem;
            font-weight: 800;
            margin: 0 0 10px 0;
            letter-spacing: 1px;
            line-height: 1.1;
            color: #ffffff;
        }

        .visual-content p {
            font-size: 1.05rem;
            color: #d0d0d0;
            font-weight: 400;
            letter-spacing: 0.4px;
        }

        /* Seção Formulário - Direita */
        .form-section {
            flex: 0 0 500px;
            background: #282c34;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px 50px;
            position: relative;
        }

        .form-header {
            margin-bottom: 50px;
        }

        .form-header h2 {
            font-size: 2.25rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 10px;
            letter-spacing: 0.2px;
        }

        .form-group {
            margin-bottom: 30px;
            position: relative;
        }

        .form-label {
            display: flex;
            align-items: center;
            color: #c7c7c7;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 12px;
            letter-spacing: 0.25px;
        }

        .form-label i {
            margin-right: 8px;
            font-size: 1rem;
            color: #4CAF50;
        }

        .form-control {
            background: transparent;
            border: none;
            border-bottom: 1px solid #4a4a4a;
            border-radius: 0;
            color: #ffffff;
            font-size: 1rem;
            padding: 12px 0 10px 0;
            width: 100%;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-bottom-color: #4CAF50;
            box-shadow: none;
        }

        .form-control::placeholder {
            color: #6a6a6a;
            font-weight: 400;
        }

        .form-control:-webkit-autofill,
        .form-control:-webkit-autofill:hover,
        .form-control:-webkit-autofill:focus {
            -webkit-text-fill-color: #ffffff;
            -webkit-box-shadow: 0 0 0px 1000px transparent inset;
            transition: background-color 5000s ease-in-out 0s;
            border-bottom-color: #4CAF50;
        }

        .forgot-password {
            text-align: right;
            margin-top: -15px;
            margin-bottom: 30px;
        }

        .forgot-password a {
            color: #4CAF50;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .forgot-password a:hover {
            color: #45a049;
        }

        .btn-login {
            width: 100%;
            background: #4CAF50;
            border: none;
            border-radius: 8px;
            padding: 14px 16px;
            font-size: 1rem;
            font-weight: 700;
            color: #ffffff;
            cursor: pointer;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
            margin-top: 20px;
        }

        .btn-login:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.4);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .create-account {
            text-align: center;
            margin-top: 30px;
        }

        .create-account a {
            color: #b0b0b0;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .create-account a:hover {
            color: #ffffff;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.3);
            border-radius: 8px;
            color: #ff6b6b;
            padding: 12px 16px;
            margin-bottom: 25px;
            font-size: 0.9rem;
        }

        .text-danger {
            color: #ff6b6b;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        /* Responsivo */
        @@media (max-width: 968px) {
            .login-container {
                flex-direction: column;
            }

            .visual-section {
                flex: 0 0 40%;
            }

            .visual-content h1 { font-size: 2.75rem; }
            .visual-content p { font-size: 0.95rem; }

            .form-section {
                flex: 1;
                padding: 40px 30px;
            }
        }

        @@media (max-width: 576px) {
            .form-section {
                flex: 0 0 100%;
                padding: 30px 20px;
            }

            .visual-section {
                display: none;
            }

            .form-header h2 { font-size: 1.9rem; }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Seção Visual - Esquerda -->
        <div class="visual-section">
            <!-- Carrossel de Imagens -->
            <div class="carousel-container" id="carouselContainer">
                <!-- As imagens serão adicionadas dinamicamente via JavaScript -->
            </div>
            
            <div class="visual-content">
                <div class="brand-wrap">
                    <h1>CAR TECH ASSIST</h1>
                    <p>Sistema de Gerenciamento de Chamados</p>
                </div>
            </div>
        </div>

        <!-- Seção Formulário - Direita -->
        <div class="form-section">
            <div class="form-header">
                <h2>Login</h2>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div class="form-group">
                    <label asp-for="LoginRequest.Login" class="form-label">
                        <i class="bi bi-person"></i>
                        User Name
                    </label>
                    <input asp-for="LoginRequest.Login" class="form-control" placeholder="Enter username" required autofocus />
                    <span asp-validation-for="LoginRequest.Login" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LoginRequest.Senha" class="form-label">
                        <i class="bi bi-lock"></i>
                        Password
                    </label>
                    <input asp-for="LoginRequest.Senha" type="password" class="form-control" placeholder="Password" required />
                    <span asp-validation-for="LoginRequest.Senha" class="text-danger"></span>
                </div>

                <!-- TenantId agora é definido automaticamente; mantemos hidden para enviar -->
                <input asp-for="LoginRequest.TenantId" type="hidden" />

                <div class="forgot-password">
                    <a href="/ForgotPassword">Forgot password</a>
                </div>

                <button type="submit" class="btn-login">Login</button>

                <div class="create-account">
                    <a href="/Register">Create new account</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate-unobtrusive.min.js"></script>
    
    <script>
        // Carrossel de Imagens
        (function() {
            const carouselContainer = document.getElementById('carouselContainer');
            const imageBasePath = '@Url.Content("~/img/ImgCarrosel/")';
            
            // Lista de imagens do carrossel (pode adicionar mais aqui)
            const images = [
                'Car1.jpg',
                'Car2.jpg',
                'Car3.jpg',
                'Car4.jpg',
                'Car5.jpg',
                'Car6.jpg',
                'Car7.jpg',
                'Car8.jpg',
                'Car9.jpg',
                'Car10.jpg',
                'Car11.jpg',
                'Car12.jpg',
                'Car13.jpg',
                'Car14.jpg',
                'Car15.jpg',
                'Car16.jpg',
                'Car17.jpg',
                'Car18.jpg',
                'Car19.jpg'
            ];
            let currentIndex = 0;
            
            // Criar slides dinamicamente
            images.forEach((image, index) => {
                const slide = document.createElement('div');
                slide.className = 'carousel-slide' + (index === 0 ? ' active' : '');
                slide.style.backgroundImage = `url('${imageBasePath}${image}')`;
                carouselContainer.appendChild(slide);
            });
            
            // Função para alternar para o próximo slide com transição suave
            function nextSlide() {
                const slides = document.querySelectorAll('.carousel-slide');
                if (slides.length === 0) return;
                
                // Remover classe active do slide atual com delay para transição suave
                const currentSlide = slides[currentIndex];
                currentSlide.classList.remove('active');
                
                // Pequeno delay para garantir transição suave
                setTimeout(() => {
                    // Avançar para o próximo slide (circular)
                    currentIndex = (currentIndex + 1) % slides.length;
                    
                    // Adicionar classe active ao novo slide
                    const nextSlide = slides[currentIndex];
                    nextSlide.classList.add('active');
                }, 50);
            }
            
            // Iniciar carrossel automático (muda a cada 6 segundos para melhor experiência)
            const intervalTime = 6000; // 6 segundos - tempo ideal para visualizar cada imagem
            let carouselInterval = setInterval(nextSlide, intervalTime);
            
            // Adicionar efeito de fade suave ao iniciar
            setTimeout(() => {
                const firstSlide = document.querySelector('.carousel-slide.active');
                if (firstSlide) {
                    firstSlide.style.transition = 'opacity 2s ease-in-out, transform 2s ease-in-out';
                }
            }, 100);
            
            // Pausar carrossel quando o mouse está sobre a seção visual
            const visualSection = document.querySelector('.visual-section');
            if (visualSection) {
                visualSection.addEventListener('mouseenter', () => {
                    clearInterval(carouselInterval);
                });
                
                visualSection.addEventListener('mouseleave', () => {
                    carouselInterval = setInterval(nextSlide, intervalTime);
                });
            }
        })();
    </script>
</body>
</html>
