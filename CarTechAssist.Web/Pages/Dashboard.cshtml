@page
@model CarTechAssist.Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="mb-0">
            <i class="bi bi-speedometer2 text-success"></i> Dashboard
        </h1>
        <p class="text-muted">Bem-vindo ao CarTechAssist</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Chamados Abertos</h6>
                        <h3 class="mb-0">@Model.TotalChamadosAbertos</h3>
                    </div>
                    <div class="text-success" style="font-size: 2.5rem;">
                        <i class="bi bi-ticket-perforated"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Em Andamento</h6>
                        <h3 class="mb-0">@Model.TotalChamadosEmAndamento</h3>
                    </div>
                    <div class="text-warning" style="font-size: 2.5rem;">
                        <i class="bi bi-clock-history"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Resolvidos</h6>
                        <h3 class="mb-0">@Model.TotalChamadosResolvidos</h3>
                    </div>
                    <div class="text-success" style="font-size: 2.5rem;">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total de Chamados</h6>
                        <h3 class="mb-0">@Model.TotalChamados</h3>
                    </div>
                    <div class="text-info" style="font-size: 2.5rem;">
                        <i class="bi bi-list-ul"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history"></i> Chamados Recentes
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ChamadosRecentes != null && Model.ChamadosRecentes.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Título</th>
                                    <th>Status</th>
                                    <th>Prioridade</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chamado in Model.ChamadosRecentes)
                                {
                                    <tr>
                                        <td>#@chamado.Numero</td>
                                        <td>@chamado.Titulo</td>
                                        <td>
                                            <span class="badge @Model.GetStatusBadgeClass(chamado.StatusNome)">
                                                @Model.GetStatusNome(chamado.StatusNome)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @Model.GetPrioridadeBadgeClass(chamado.PrioridadeNome)">
                                                @Model.GetPrioridadeNome(chamado.PrioridadeNome)
                                            </span>
                                        </td>
                                        <td>@chamado.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: var(--text-muted);"></i>
                        <p class="text-muted mt-3">Nenhum chamado encontrado.</p>
                        <a href="/Chamados/Criar" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Criar Primeiro Chamado
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-person-circle"></i> Informações do Usuário
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong class="text-muted">Nome:</strong>
                    <p class="mb-0">@Model.NomeUsuario</p>
                </div>
                <div class="mb-3">
                    <strong class="text-muted">Tenant ID:</strong>
                    <p class="mb-0">@Model.TenantId</p>
                </div>
                <div class="mb-3">
                    <strong class="text-muted">Usuário ID:</strong>
                    <p class="mb-0">@Model.UsuarioId</p>
                </div>
                <hr class="my-3" style="border-color: var(--border-color);">
                <div class="d-grid gap-2">
                    <a href="/Chamados/Criar" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Novo Chamado
                    </a>
                    <a href="/Chamados" class="btn btn-outline-primary">
                        <i class="bi bi-list"></i> Ver Todos os Chamados
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.IsCliente)
{
    <!-- ChatBot Flutuante -->
    <div id="chatbot-widget" style="position: fixed; bottom: 20px; left: 20px; z-index: 1050;">
        <div id="chatbot-button" class="d-flex align-items-center justify-content-center" 
             style="width: 60px; height: 60px; background: #4CAF50; border-radius: 50%; 
                    cursor: pointer; box-shadow: 0 4px 12px rgba(76, 175, 80, 0.4); 
                    transition: all 0.3s ease; animation: pulse 2s infinite;">
            <i class="bi bi-robot text-white" style="font-size: 1.5rem;"></i>
        </div>
        <div id="chatbot-tooltip" style="position: absolute; bottom: 70px; left: 0; 
             background: #282c34; color: white; padding: 8px 12px; border-radius: 8px; 
             white-space: nowrap; opacity: 0; transition: opacity 0.3s; pointer-events: none;
             box-shadow: 0 2px 8px rgba(0,0,0,0.3); font-size: 0.85rem;">
            <i class="bi bi-chat-dots me-1"></i> Fale com o ChatBot
        </div>
    </div>

    <style>
        @@keyframes pulse {
            0%, 100% {
                box-shadow: 0 4px 12px rgba(76, 175, 80, 0.4);
            }
            50% {
                box-shadow: 0 4px 20px rgba(76, 175, 80, 0.7);
            }
        }

        #chatbot-button:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.6) !important;
        }

        #chatbot-widget:hover #chatbot-tooltip {
            opacity: 1;
        }

        @@media (max-width: 768px) {
            #chatbot-widget {
                bottom: 15px;
                left: 15px;
            }
            
            #chatbot-button {
                width: 50px;
                height: 50px;
            }
            
            #chatbot-button i {
                font-size: 1.2rem !important;
            }
        }
    </style>

    <script>
        document.getElementById('chatbot-button')?.addEventListener('click', function() {
            window.location.href = '/ChatBot';
        });
    </script>
}
