@page
@model CarTechAssist.Web.Pages.ChamadosModel
@{
    ViewData["Title"] = "Chamados";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-0">
                    <i class="bi bi-ticket text-success"></i> Chamados
                </h1>
                <p class="text-muted">Gerencie seus chamados de suporte</p>
            </div>
            <div>
                <a href="/Chamados/Criar" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Chamado
                </a>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Filtros</h5>
                    <div>
                        <a href="/Chamados" class="btn btn-sm btn-outline-secondary">Limpar</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="statusId" class="form-select">
                            <option value="">Todos</option>
                            <option value="1" selected="@(Model.StatusFiltro == 1)">Aberto</option>
                            <option value="2" selected="@(Model.StatusFiltro == 2)">Em Andamento</option>
                            <option value="3" selected="@(Model.StatusFiltro == 3)">Resolvido</option>
                            <option value="4" selected="@(Model.StatusFiltro == 4)">Cancelado</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel"></i> Filtrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Lista de Chamados</h5>
            </div>
            <div class="card-body">
                @if (Model.Chamados?.Items != null && Model.Chamados.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Título</th>
                                    <th>Status</th>
                                    <th>Prioridade</th>
                                    <th>Data Criação</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chamado in Model.Chamados.Items)
                                {
                                    <tr>
                                        <td><strong>@chamado.Numero</strong></td>
                                        <td>@chamado.Titulo</td>
                                        <td>
                                            <span class="badge @Model.GetStatusBadgeClass(chamado.StatusNome)">
                                                @Model.GetStatusNome(chamado.StatusNome)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @Model.GetPrioridadeBadgeClass(chamado.PrioridadeNome)">
                                                @chamado.PrioridadeNome
                                            </span>
                                        </td>
                                        <td>@chamado.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <a href="/Chamados/Detalhes/@chamado.ChamadoId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Chamados != null)
                    {
                        var totalPages = Model.GetTotalPages();
                        @if (totalPages > 1)
                    {
                        <nav aria-label="Paginação">
                            <ul class="pagination justify-content-center">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)&statusId=@Model.StatusFiltro">Anterior</a>
                                    </li>
                                }

                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="?page=@i&statusId=@Model.StatusFiltro">@i</a>
                                    </li>
                                }

                                @if (Model.CurrentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)&statusId=@Model.StatusFiltro">Próxima</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                        }
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Nenhum chamado encontrado.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

