@page
@model IndexModel
@{
    ViewData["Title"] = "CarTechAssist - Sistema de Gerenciamento de Chamados";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/img/LOGO.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --bg-primary: #282c34;
            --bg-secondary: #1a1a1a;
            --bg-tertiary: #0f0f0f;
            --accent-green: #4CAF50;
            --accent-green-hover: #45a049;
            --text-primary: #ffffff;
            --text-secondary: #b0b0b0;
            --text-muted: #6a6a6a;
            --border-color: #4a4a4a;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg-secondary);
            color: var(--text-primary);
            line-height: 1.6;
        }

        /* Navbar */
        .navbar {
            background: var(--bg-primary) !important;
            box-shadow: 0 2px 8px rgba(0,0,0,0.3);
            border-bottom: 1px solid var(--border-color);
            padding: 12px 0;
        }

        .navbar-brand {
            color: var(--text-primary) !important;
            font-weight: 700;
            font-size: 1.3rem;
            letter-spacing: -0.5px;
        }

        .navbar-brand:hover {
            color: var(--accent-green) !important;
        }

        .nav-link {
            color: var(--text-secondary) !important;
            font-weight: 500;
            margin: 0 8px;
            transition: all 0.3s ease;
            padding: 8px 12px !important;
            border-radius: 6px;
        }

        .nav-link:hover {
            color: var(--accent-green) !important;
            background: rgba(76, 175, 80, 0.1);
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-tertiary) 100%);
            padding: 120px 0 80px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 30% 50%, rgba(76, 175, 80, 0.08) 0%, transparent 55%),
                radial-gradient(circle at 70% 80%, rgba(76, 175, 80, 0.06) 0%, transparent 55%);
            z-index: 0;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-section h1 {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 20px;
            letter-spacing: -1px;
            background: linear-gradient(135deg, #ffffff 0%, var(--accent-green) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-section .subtitle {
            font-size: 1.5rem;
            color: var(--text-secondary);
            font-weight: 400;
            margin-bottom: 40px;
        }

        .hero-section .tagline {
            font-size: 1.2rem;
            color: var(--accent-green);
            font-weight: 600;
            margin-bottom: 50px;
        }

        .btn-hero {
            background: var(--accent-green);
            color: white;
            padding: 16px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        }

        .btn-hero:hover {
            background: var(--accent-green-hover);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            color: white;
        }

        /* Section Styles */
        .section {
            padding: 80px 0;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
            color: var(--text-primary);
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: var(--text-secondary);
            text-align: center;
            margin-bottom: 60px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .section-divider {
            width: 80px;
            height: 4px;
            background: var(--accent-green);
            margin: 30px auto;
            border-radius: 2px;
        }

        /* About Section */
        .about-section {
            background: var(--bg-primary);
        }

        .about-content {
            max-width: 900px;
            margin: 0 auto;
            text-align: center;
        }

        .about-text {
            font-size: 1.1rem;
            color: var(--text-secondary);
            line-height: 1.8;
            margin-bottom: 40px;
        }

        .about-values {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .value-item {
            background: var(--bg-secondary);
            padding: 30px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

        .value-item:hover {
            border-color: var(--accent-green);
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        .value-item i {
            font-size: 2.5rem;
            color: var(--accent-green);
            margin-bottom: 20px;
        }

        .value-item h4 {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--text-primary);
        }

        .value-item p {
            color: var(--text-secondary);
            font-style: italic;
        }

        /* Services Section */
        .services-section {
            background: var(--bg-secondary);
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .service-card {
            background: var(--bg-primary);
            padding: 30px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

        .service-card:hover {
            border-color: var(--accent-green);
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        .service-card h4 {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--accent-green);
        }

        .service-card ul {
            list-style: none;
            padding: 0;
        }

        .service-card ul li {
            color: var(--text-secondary);
            padding: 8px 0;
            padding-left: 25px;
            position: relative;
        }

        .service-card ul li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: var(--accent-green);
            font-weight: bold;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-tertiary) 100%);
            padding: 80px 0;
            text-align: center;
        }

        .cta-content h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .cta-content p {
            font-size: 1.2rem;
            color: var(--text-secondary);
            margin-bottom: 40px;
        }

        /* Footer */
        .footer {
            background: var(--bg-tertiary);
            padding: 40px 0;
            text-align: center;
            border-top: 1px solid var(--border-color);
            color: var(--text-secondary);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2.5rem;
            }

            .hero-section .subtitle {
                font-size: 1.2rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .about-values,
            .services-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-car-front"></i> CarTechAssist
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#about">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1>CAR TECH ASSIST</h1>
                <p class="subtitle">Sistema de Gerenciamento de Chamados</p>
                <p class="tagline">Gerencie seus chamados técnicos de forma eficiente e inteligente</p>
                <a href="/Login" class="btn-hero">
                    <i class="bi bi-box-arrow-in-right"></i> Acessar Sistema
                </a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section about-section">
        <div class="container">
            <h2 class="section-title">Um pouco <strong>sobre nós</strong></h2>
            <div class="section-divider"></div>
            <div class="about-content">
                <p class="about-text">
                    O <strong>CarTechAssist</strong> é uma solução completa para gerenciamento de chamados técnicos 
                    desenvolvida especialmente para oficinas mecânicas e centros automotivos. 
                    Nossa plataforma oferece ferramentas avançadas para otimizar o atendimento ao cliente 
                    e melhorar a eficiência operacional.
                </p>
                <div class="about-values">
                    <div class="value-item">
                        <i class="bi bi-shield-check"></i>
                        <h4>Qualidade</h4>
                        <p>Proporcionar soluções com qualidade na gestão de chamados técnicos, respeitando as melhores práticas do mercado.</p>
                    </div>
                    <div class="value-item">
                        <i class="bi bi-people"></i>
                        <h4>Atendimento</h4>
                        <p>Oferecer segurança, tranquilidade e satisfação aos nossos clientes através de um sistema confiável e intuitivo.</p>
                    </div>
                    <div class="value-item">
                        <i class="bi bi-graph-up-arrow"></i>
                        <h4>Excelência</h4>
                        <p>Buscar sempre a excelência, com contínuo acompanhamento da evolução tecnológica e inovação constante.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="section services-section">
        <div class="container">
            <h2 class="section-title">Veja <strong>nossos serviços</strong></h2>
            <div class="section-divider"></div>
            <p class="section-subtitle">
                Plataforma completa para gerenciamento de chamados técnicos com recursos avançados
            </p>
            <div class="services-grid">
                <div class="service-card">
                    <h4><i class="bi bi-ticket-detailed"></i> Gestão de Chamados</h4>
                    <ul>
                        <li>Criação e acompanhamento de chamados</li>
                        <li>Controle de status e prioridades</li>
                        <li>Histórico completo de interações</li>
                        <li>Anexos e documentos</li>
                        <li>Notificações em tempo real</li>
                    </ul>
                </div>
                <div class="service-card">
                    <h4><i class="bi bi-robot"></i> Inteligência Artificial</h4>
                    <ul>
                        <li>Categorização automática de chamados</li>
                        <li>Análise de prioridade inteligente</li>
                        <li>Resumo automático de conversas</li>
                        <li>Atendimento assistido por IA</li>
                    </ul>
                </div>
                <div class="service-card">
                    <h4><i class="bi bi-building"></i> Multi-Tenant</h4>
                    <ul>
                        <li>Suporte a múltiplas oficinas</li>
                        <li>Isolamento completo de dados</li>
                        <li>Gestão centralizada</li>
                        <li>Configurações personalizadas</li>
                        <li>Relatórios por tenant</li>
                    </ul>
                </div>
               
                <div class="service-card">
                    <h4><i class="bi bi-chat-dots"></i> Comunicação</h4>
                    <ul>
                        <li>Chat em tempo real</li>
                        <li>Atualizações automáticas</li>
                        <li>Histórico de conversas</li>
                        <li>Múltiplos canais de atendimento</li>
                    </ul>
                </div>
                <div class="service-card">
                    <h4><i class="bi bi-bar-chart"></i> Relatórios e Analytics</h4>
                    <ul>
                        <li>Dashboard interativo</li>
                        <li>Métricas de desempenho</li>
                        <li>Análise de SLA</li>
                        <li>Relatórios personalizados</li>
                        <li>Exportação de dados</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Pronto para começar?</h2>
                <p>Acesse o sistema e descubra como podemos ajudar sua oficina a gerenciar chamados de forma mais eficiente.</p>
                <a href="/Login" class="btn-hero">
                    <i class="bi bi-box-arrow-in-right"></i> Acessar Sistema
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 CarTechAssist - Sistema de Gerenciamento de Chamados. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Smooth scroll para links âncora
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
